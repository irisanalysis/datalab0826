# =============================================================================
# SECURITY-CRITICAL CONFIGURATION
# =============================================================================
# IMPORTANT: Replace all placeholder values before deploying to production!
# Generate secure random values for secrets and change default passwords.

# Database Configuration (REQUIRED)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_secure_database_password_here

# JWT Configuration (SECURITY CRITICAL)
# =============================================================================
# Generate a secure random string for JWT_SECRET (minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
ACCESS_TTL=900
REFRESH_TTL=604800

# Flask Application Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=false
PORT=8000
HOST=0.0.0.0

# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Security Settings
# =============================================================================
# Enable secure cookies in production (HTTPS required)
COOKIE_SECURE=false

# Password Hashing Configuration
# =============================================================================
# Bcrypt rounds (higher = more secure but slower, minimum 10, recommended 12-14)
BCRYPT_ROUNDS=12

# Application Environment (for external services)
# =============================================================================
NODE_ENV=development

# Frontend Configuration (if using separate frontend)
# =============================================================================
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_AUTH=10
RATE_LIMIT_REFRESH=5

# Logging Configuration
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. JWT_SECRET is set to a secure random string (32+ characters)
# 2. POSTGRES_PASSWORD is changed from default
# 3. FLASK_ENV is set to 'production'
# 4. FLASK_DEBUG is set to 'false'
# 5. COOKIE_SECURE is set to 'true' (requires HTTPS)
# 6. CORS_ORIGINS only includes your production domains
# 7. All database credentials are secure and unique
# 8. LOG_LEVEL is set to 'WARNING' or 'ERROR' for production