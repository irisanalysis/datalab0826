# =============================================================================
# AI DATA PLATFORM BACKEND CONFIGURATION
# =============================================================================

# Database Configuration (REQUIRED)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datalab
POSTGRES_USER=user
POSTGRES_PASSWORD=your_secure_database_password

# JWT Configuration (SECURITY CRITICAL)
# =============================================================================
# Generate a secure random string for JWT_SECRET (minimum 32 characters)
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
ACCESS_TTL=900

# Application Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Security Settings
# =============================================================================
BCRYPT_ROUNDS=12
COOKIE_SECURE=false
ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_ENCRYPTION_KEY

# Microservice URLs
# =============================================================================
AI_SERVICE_URL=http://localhost:8002
COMPUTE_SERVICE_URL=http://localhost:8003
VIZ_SERVICE_URL=http://localhost:8004

# Service Ports
# =============================================================================
API_GATEWAY_PORT=8000
DATA_SERVICE_PORT=8001
AI_SERVICE_PORT=8002
COMPUTE_SERVICE_PORT=8003
VIZ_SERVICE_PORT=8004

# Data Processing Limits
# =============================================================================
MAX_DATA_SOURCES_PER_USER=10
MAX_QUERY_ROWS=1000
UPLOAD_MAX_SIZE=100MB

# Session Management
# =============================================================================
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Audit and Retention
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=90

# Development Settings
# =============================================================================
HOT_RELOAD=true
DEBUG_SQL=false